@model LoginViewModel
<div class="row mt-5">
    <div class="col-12 col-sm-10 col-md-8 col-xl-6 m-auto loginForm p-0">
        <form asp-controller="Auth" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl"/>
            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
            <div class="form-group mx-5">
                <label class="control-label">User name</label>
                <input class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group mx-5">
                <label class="control-label">Password</label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group my-3 justify-content-center d-flex">
                <button class="btn btn-primary" type="submit">Sign In</button>
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div id="formFooter">
                 <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="underlineHover">Register</a>
            </div>
        </form>
    </div>
</div>